%h1 Editing profile
= form_for(@profile, :url => profile_url) do |f|

  %div
    = f.label :first_name
    = f.text_field :first_name
  %div
    = f.label :last_name
    = f.text_field :last_name
  %div
    = f.label :address_line_one
    = f.text_field :address_line_one
  %div
    = f.label :address_line_two
    = f.text_field :address_line_two
  %div
    = f.submit 'Update'
= link_to 'Show', blog_path(@profile.id)